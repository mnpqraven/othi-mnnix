{
  "name": "@repo/database",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    "./schema": "./src/schema/index.ts",
    "./types": "./src/types.ts",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "lint": "biome check",
    "start": "docker kill $(docker ps -qf publish=4010) 2> /dev/null || echo 'No container running on port 4010' && docker run -p 4010:8080 -d -v sqld-data:/var/lib/sqld ghcr.io/tursodatabase/libsql-server:latest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "npx tsx ./migrate.ts",
    "db:push": "pnpx dotenv-cli -e ../../.env -c development -- drizzle-kit push",
    "db:pull": "pnpx dotenv-cli -e ../../.env -c development -- drizzle-kit introspect",
    "db:drop": "pnpx dotenv-cli -e ../../.env -c development -- drizzle-kit drop",
    "db:studio": "pnpx dotenv-cli -e ../../.env -c development -- drizzle-kit studio --port 4009 --host 127.0.0.1 --verbose",
    "db:up": "pnpx dotenv-cli -e ../../.env -c development -- drizzle-kit up"
  },
  "dependencies": {
    "@libsql/client": "^0.15.4",
    "@repo/env-agnostic": "workspace:*",
    "arktype": "^2.1.20",
    "better-sqlite3": "^11.9.1",
    "dotenv": "^16.5.0",
    "drizzle-arktype": "^0.1.2",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.7.1",
    "tslib": "^2.3.0",
    "ulid": "^3.0.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.1"
  }
}
